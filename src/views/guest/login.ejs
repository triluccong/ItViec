                                            <a
                                                class="dropdown-item"
                                                href="/apply-candidate"
                                                ><i
                                                    class="fas fa-user-check"
                                                ></i>
                                                Ứng viên</a
                                            >
                                            <a
                                                class="dropdown-item"
                                                href="/my-job"
                                                ><i
                                                    class="fas fa-briefcase"
                                                ></i>
                                                Việc làm của tôi</a
                                            >
                                            <% }else{ %>
                                            <a
                                                class="dropdown-item"
                                                href="/apply-job"
                                                ><i
                                                    class="fas fa-briefcase"
                                                ></i>
                                                Việc làm của tôi</a
                                            >
                                            <% } %>
                                            <div class="dropdown-divider"></div>
                                            <a
                                                class="dropdown-item"
                                                href="/logout"
                                                ><i
                                                    class="fas fa-sign-out-alt"
                                                ></i>
                                                Đăng xuất</a
                                            >
                                        </div>
                                    </li>
                                    <% } %>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
